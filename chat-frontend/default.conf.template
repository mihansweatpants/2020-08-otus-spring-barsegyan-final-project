server {
  listen   80;

  root /srv/www;
  index index.html;
  server_name _;

  location /api {
    proxy_pass ${API_URL};
  }

  location /ws {
    proxy_pass ${WS_URL};
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }


  location / {
    try_files $uri /index.html;
  }
}